classDiagram
    direction LR

    class Daneshjoo {
        +studentID: String
        +name: String
        +major: String
        +email: String
        +submitRequest(company: Sherkat, supervisor: OstadRahnama)
        +viewRequests()
    }

    class OstadRahnama {
        +supervisorID: String
        +name: String
        +specialty: String
        +reviewRequest(request: DarkhastKaramozi)
        +approveOrReject(requestID: int, decision: bool)
    }

    class ModirAmuzesh {
        +adminID: String
        +name: String
        +accessLevel: String
        +finalApproval(request: DarkhastKaramozi)
    }

    class Sherkat {
        +companyID: String
        +name: String
        +address: String
        +capacity: int
        +registerInternshipOpportunity()
        +receiveRequest(request: DarkhastKaramozi)
    }

    class DarkhastKaramozi {
        +requestID: int
        +submissionDate: Date
        +internshipType: String
        +status: String
        +hoursRequired: int
        +getDetails()
    }

    class GozareshNahaei {
        +reportID: int
        +uploadDate: Date
        +supervisorGrade: float
        +finalGrade: float
        +uploadReport()
    }

    Daneshjoo "1" --> "0..*" DarkhastKaramozi : submits
    OstadRahnama "1" --> "0..*" DarkhastKaramozi : reviews
    ModirAmuzesh "1" --> "0..*" DarkhastKaramozi : approves
    Sherkat "1" --> "0..*" DarkhastKaramozi : relatedTo
    DarkhastKaramozi "1" --> "0..1" GozareshNahaei : resultsIn
